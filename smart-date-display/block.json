{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "smart-date-display/date-block",
  "title": "Smart Date Display",
  "category": "widgets",
  "icon": "calendar-alt",
  "description": "Display dates in relative or absolute formats with customization options",
  "keywords": ["date", "relative", "time", "format"],
  "version": "1.0.0",
  "textdomain": "smart-date-display",
  "editorScript": "file:./assets/js/smart-date-admin.js",
  "editorStyle": "file:./assets/css/editor-style.css",
  "script": "file:./assets/js/smart-date.js",
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  },
  "attributes": {
    "date": {
      "type": "string",
      "default": ""
    },
    "displayType": {
      "type": "string",
      "default": "relative"
    },
    "format": {
      "type": "string",
      "default": "F j, Y"
    },
    "prefix": {
      "type": "string",
      "default": ""
    },
    "suffix": {
      "type": "string",
      "default": "ago"
    },
    "locale": {
      "type": "string",
      "default": "en"
    }
  },
  "example": {
    "attributes": {
      "date": "2023-01-01 12:00:00",
      "displayType": "relative",
      "prefix": "Posted",
      "suffix": "ago"
    }
  }
}